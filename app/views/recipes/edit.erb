<h2>Edit your recipe:</h2>
    <form action="/recipes/<%= @recipe.id %>" method="post">
        <input type="hidden" name="_method" value=patch >
        <label>Name:</label><input type="text" name="recipe[name]" id="name" value="<%= @recipe.name %>">
        <label>Ingredients:</label><input type="text" name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>">
        <label>Cook Time:</label><input type="text" name="recipe[cook_time]" id="cook_time" value="<%= @recipe.cook_time %>">
        <input type="submit" value="Edit!!!">
    </form>